<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false" width="100%" height="20">
	
	<fx:Script>
		<![CDATA[
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
	</s:states>
	
	<s:Rect id="bgRect"
			includeIn="normal, hovered"
			left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor 
				alpha.normal="0.85" alpha.hovered="1.0"
				color.normal="#242e32" color.hovered="{getStyle('rollOverColor')}"/>
		</s:fill>
	</s:Rect>
	<s:Label text="{data}" 
			 verticalCenter="0" 
			 color.normal="#99adb7" color.hovered="#242e32"
			 left="5" right="5" top="5" bottom="5"/>
	
</s:ItemRenderer>
